<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_276"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_background_white_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_31"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:textColor="@color/skynightblue"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"
        tools:text="标题" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_21"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_5"
        android:minLines="2"
        android:textColor="@color/skynightblue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        tools:text="内容" />

    <View style="@style/MyDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_background_white_10_bl"
            android:gravity="center"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="确认"
            android:textColor="@color/skynightblue"
            android:textSize="@dimen/sp_15" />

        <View
            style="@style/MyDivider"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_end"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_background_white_10_br"
            android:gravity="center"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="取消"
            android:textColor="@color/skynightblue"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</LinearLayout>
